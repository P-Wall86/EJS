<% const account=locals.accountData; const isInventoryManager=account && (account.account_type==="Employee" ||
    account.account_type==="Admin" ); %>

    <h1>
        <%= title %>
    </h1>

    <% if (errors && !errors.isEmpty()) { %>
        <ul class="flash-messages">
            <% errors.array().forEach(error=> { %>
                <% if (error.msg !=='Invalid value' ) { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% } %>
                        <% }) %>
        </ul>
        <% } %>

            <% if (flashMessages && flashMessages.notice) { %>
                <% flashMessages.notice.forEach(msg=> { %>
                    <div class="alert alert-info">
                        <%= msg %>
                    </div>
                    <% }) %>
                        <% } %>

                            <div class="account-management-view">
                                <h2>Welcome <%= account.account_firstname %>
                                </h2>
                                <p><a href="/account/update/<%= account.account_id %>">Update Account Information</a>
                                </p>

                                <% if (isInventoryManager) { %>
                                    <h3 class="inventory-management-heading">Inventory Management</h3>
                                    <p>
                                        <a href="/inv">Access Inventory Management View</a>
                                    </p>
                                    <% } %>

                                        <p>From here, you can manage your personal information.</p>
                            </div>
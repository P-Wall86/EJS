<h1>
    <%= title %>
</h1>

<!-- Display validation errors here -->
<% if (errors && !errors.isEmpty()) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <% if (error.msg !== 'Invalid value') { %>
            <li><%= error.msg %></li>
            <% } %>
            <% }) %>
    </ul>
    <% } %>

        <!-- Flash Messages -->
        <% if (flashMessages && flashMessages.notice) { %>
            <% flashMessages.notice.forEach(msg=> { %>
                <div class="alert alert-info">
                    <%= msg %>
                </div>
                <% }) %>
                    <% } %>

                        <form action="/account/registration" method="POST" class="register-form">

                            <label for="account_firstname">First Name</label>
                            <input type="text" id="account_firstname" name="account_firstname" required>

                            <label for="account_lastname">Last Name</label>
                            <input type="text" id="account_lastname" name="account_lastname" required>

                            <label for="account_email">Email</label>
                            <input type="email" id="account_email" name="account_email" required>

                            <label for="account_password">Password:</label>

                            <span class="password-requirements">
                                Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter
                                and 1
                                special character
                            </span>

                            <div class="password-wrapper">
                                <input type="password" id="account_password" name="account_password" required
                                    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
                                <button type="button" id="togglePassword" class="toggle-password">Show</button>
                            </div>

                            <button type="submit">Register</button>
                        </form>

                        <p class="register-link">
                            Already have an account? <a href="/account/login">Log in</a>
                        </p>
<h1>
    <%= title %>
</h1>

<% if (flashMessages && flashMessages.success) { %>
    <div class="alert-success">
        <%= flashMessages.success %>
    </div>
    <% } %>

        <% if (flashMessages && flashMessages.error) { %>
            <div class="alert-error">
                <%= flashMessages.error %>
            </div>
            <% } %>

                <% if (requests && requests.length> 0) { %>
                    <ul id="inv-display">
                        <% requests.forEach(request=> { %>
                            <li>
                                <img src="<%= request.inv_thumbnail %>"
                                    alt="<%= request.inv_make %> <%= request.inv_model %>">

                                <div class="namePrice">
                                    <h2>
                                        <%= request.inv_make %>
                                            <%= request.inv_model %>
                                    </h2>

                                    <span>
                                        Test Drive: <%= new Date(request.requested_date).toLocaleDateString() %>
                                    </span>

                                    <hr>

                                    <p><strong>Comments:</strong>
                                        <%= request.comment || "No comments" %>
                                    </p>
                                </div>
                            </li>
                            <% }) %>
                    </ul>
                    <% } else { %>
                        <p>You have no test drive requests.</p>
                        <% } %>